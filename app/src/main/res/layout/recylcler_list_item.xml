<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/app_padding">

    <ImageView
        android:id="@+id/imgProfile"
        android:layout_width="@dimen/profile_pic_width"
        android:layout_height="@dimen/profile_pic_width"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textArticleTitle"
        android:layout_width="279dp"
        android:layout_height="35dp"
        android:maxLines="2"
        android:singleLine="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgProfile"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Article Title Article Title Article Title Article Title Article Title Article " />

    <TextView
        android:id="@+id/textArticleSubTitle"
        android:layout_width="269dp"
        android:layout_height="36dp"
        android:layout_marginTop="10dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.283"
        app:layout_constraintStart_toEndOf="@+id/imgProfile"
        app:layout_constraintTop_toBottomOf="@+id/textArticleTitle"
        tools:text="Subtitle Text......." />

    <TextView
        android:id="@+id/textPublishedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="222dp"
        android:layout_marginTop="@dimen/_5dp"
        android:drawableStart="@android:drawable/ic_menu_my_calendar"
        android:text=""
        app:layout_constraintEnd_toEndOf="@+id/textArticleTitle"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imgProfile"
        app:layout_constraintTop_toBottomOf="@+id/textArticleSubTitle"
        tools:text="03 October 2021" />
</androidx.constraintlayout.widget.ConstraintLayout>